<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/judson</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="CircularShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="colored_checkbox" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/brown</item>
    </style>

    <style name="CustomChipStyle">
        <item name="chipCornerRadius">16dp</item> <!-- Rounds the corners -->
        <item name="chipBackgroundColor">@color/black</item> <!-- Custom background color -->
        <item name="chipStrokeColor">@color/orange</item> <!-- Stroke color -->
        <item name="chipStrokeWidth">1dp</item> <!-- Stroke width -->
        <item name="android:textColor">@android:color/white</item> <!-- Text color -->
    </style>

    <!-- Custom style for the DatePickerDialog -->
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Background color for the dialog -->
        <item name="android:background">@color/black</item>

        <!-- Text color for the header -->
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Text color for the date picker values -->
        <item name="android:textColor">@color/white</item>

        <!-- Button text color -->
        <item name="android:textColorSecondary">@color/white</item>

        <!-- Customize button color -->
        <item name="android:buttonStyle">@style/CustomDatePickerButton</item>
    </style>

    <!-- Customize the button style -->
    <style name="CustomDatePickerButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/orange</item>
        <item name="android:colorBackground">@color/orange</item>
    </style>
</resources>