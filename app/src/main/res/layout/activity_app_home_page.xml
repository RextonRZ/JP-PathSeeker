<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Navigation Host Fragment -->

    <!-- Text Above Slider -->
    <FrameLayout
        android:id="@+id/nav_host_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="166dp"
            android:layout_height="130dp"
            android:layout_gravity="end"
            android:layout_marginTop="25dp"
            android:contentDescription="App logo"
            android:src="@drawable/pathseekerlogowhite"
            tools:ignore="MissingConstraints" />
    </FrameLayout>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Welcome back"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/judson"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="19dp"
        app:layout_constraintBottom_toTopOf="@id/cardView" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Ooi Rui Zhe"
        android:textColor="#C28043"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/judson"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="19dp"
        app:layout_constraintBottom_toTopOf="@id/cardView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        tools:ignore="NotSibling">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="189dp"
            android:layout_height="121dp"
            android:layout_margin="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="#ACACAC"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <LinearLayout
                android:layout_width="174dp"
                android:layout_height="104dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/imageViewCard1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/forumicon" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="189dp"
            android:layout_height="121dp"
            android:layout_margin="0dp"
            android:layout_marginStart="23dp"
            app:cardBackgroundColor="#B9B6B4"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toEndOf="@+id/card1"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="7dp" />

                <ImageView
                    android:id="@+id/imageViewCard2"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:src="@drawable/notification" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Card 1"
                    android:textSize="18sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="189dp"
            android:layout_height="121dp"
            android:layout_margin="0dp"
            app:cardBackgroundColor="#B9B6B4"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="11dp" />

                <ImageView
                    android:id="@+id/imageViewCard3"
                    android:layout_width="109dp"
                    android:layout_height="69dp"
                    android:src="@drawable/mentorship" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Card 1"
                    android:textSize="18sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="189dp"
            android:layout_height="121dp"
            android:layout_margin="0dp"
            app:cardBackgroundColor="#ACACAC"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toEndOf="@+id/card3"
            app:layout_constraintTop_toBottomOf="@+id/card2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="11dp" />

                <ImageView
                    android:id="@+id/imageViewCard4"
                    android:layout_width="wrap_content"
                    android:layout_height="104dp"
                    android:src="@drawable/bookmark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Card 1"
                    android:textSize="18sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- CardView with Image Slider -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userName">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="232dp"
                android:backgroundTint="@color/black"
                app:iss_auto_cycle="true"
                app:iss_corner_radius="0"
                app:iss_delay="1000"
                app:iss_period="1000"
                app:iss_title_background="@color/black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/latestNotices"
        android:layout_width="146dp"
        android:layout_height="20dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/judson"
        android:text=" Latest Notices"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/seeMoreHome"
        android:layout_width="71dp"
        android:layout_height="17dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/judson"
        android:text="See More"
        android:textColor="#BFBFBF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:ignore="NotSibling" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNotice"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_margin="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/latestNotices"
        app:cardBackgroundColor="#E5E5E5"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Nov 2024"
                android:fontFamily="@font/judson"
                android:textStyle="normal"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Asia Foundation Women Empowerment Partnership \nProgram Now Open for Registration!"
                android:fontFamily="@font/judson"
                android:layout_marginTop="3dp"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#D06400"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/judson"
                android:text="Check out here >>>"
                android:textSize="10sp"
                android:textStyle="normal"
                android:layout_gravity="end"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:itemIconTint="@color/nav_item_color_selector"
        app:itemRippleColor="@color/grey"
        app:itemTextColor="@color/nav_item_color_selector"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>