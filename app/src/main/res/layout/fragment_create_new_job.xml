                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBExecutive"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Executive"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBFreelance"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Freelance"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </GridLayout>

            <TextView
                android:id="@+id/TVchooseJobCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/judson_bold"
                android:labelFor="@+id/ETJobTitle"
                android:text="Job Category"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/GLExperienceLevel" />

            <GridLayout
                android:id="@+id/GLJobCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="8dp"
                android:columnCount="2"
                android:rowCount="7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/TVchooseJobCategory">

                <CheckBox
                    android:id="@+id/CBTech"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Technology"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBEngineering"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Engineering"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBHealth"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Healthcare"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBBusiness"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Business"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBEdu"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Education"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBCreative"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Creative"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBRetail"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Retail"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBFood"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Food"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBTransport"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Transportation"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBAdmin"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Administrative"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBLaw"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
