                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Temporary"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBInternship"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Internship"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </GridLayout>

            <TextView
                android:id="@+id/TVchooseRemote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/judson_bold"
                android:labelFor="@+id/GLJobTypes"
                android:text="Remote"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/GLJobTypes" />

            <GridLayout
                android:id="@+id/GLRemote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                android:columnCount="2"
                android:rowCount="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/TVchooseRemote">

                <CheckBox
                    android:id="@+id/CBOnSite"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="On-site"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBRemote"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Remote"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBHybrid"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Hybrid"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </GridLayout>

            <TextView
                android:id="@+id/TVchooseExperienceLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/judson_bold"
                android:labelFor="@+id/GLExperienceLevel"
                android:text="Experience Level"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/GLRemote" />

            <GridLayout
                android:id="@+id/GLExperienceLevel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                android:columnCount="2"
                android:rowCount="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/TVchooseExperienceLevel">

                <CheckBox
                    android:id="@+id/CBInternshipExp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/judson"
                    android:paddingHorizontal="10dp"
                    android:text="Internship"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:theme="@style/colored_checkbox" />

                <CheckBox
                    android:id="@+id/CBEntryLevel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Entry-Level"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBMidLevel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Mid-Level"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBSeniorLevel"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Senior-Level"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBManagerial"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
