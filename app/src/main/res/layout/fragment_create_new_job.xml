                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBScience"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Science"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/CBOthers"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:button="@drawable/custom_checkbox"
                    android:theme="@style/colored_checkbox"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/judson"
                    android:text="Others"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </GridLayout>

            <TextView
                android:id="@+id/TVaddMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/judson_bold"
                android:labelFor="@+id/GLJobTypes"
                android:text="Add Media"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/GLJobCategory" />

            <ImageButton
                android:id="@+id/IBaddMedia"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/TVaddMedia"
                android:src="@drawable/baseline_upload_file_24"
                android:background="@drawable/dashed_border" />

            <ImageView
                android:id="@+id/IVPreview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="25dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/IBaddMedia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/IVPreview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"
                android:fontFamily="@font/judson_bold"
                android:textSize="20sp"
                android:backgroundTint="@color/brown"
                android:text="Submit" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>